@page
@model SilverJewelry_RazorPage.Pages.Login.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>BranchAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           @if (!string.IsNullOrEmpty(Request.Query["errorMessage"]))
            {
                <h3 align="center" style="color:red">@Request.Query["errorMessage"]</h3>
            }


            <div class="form-group">
                <label asp-for="BranchAccount.EmailAddress" class="control-label"></label>
                <input asp-for="BranchAccount.EmailAddress" class="form-control" />
                <span asp-validation-for="BranchAccount.EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BranchAccount.AccountPassword" class="control-label"></label>
                <input type="password" asp-for="BranchAccount.AccountPassword" class="form-control" />
                <span asp-validation-for="BranchAccount.AccountPassword" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
